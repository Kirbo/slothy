{
  "name": "sloth",
  "description": "Changes your Slack status based on the SSID you're currently connected to.",
  "productName": "Sloth",
  "productUrl": "https://github.com/kirbo/sloth/releases",
  "product": {
    "GitLabRepository": "https://gitlab.com/kirbo/sloth",
    "GitHubRepository": "https://github.com/kirbo/sloth"
  },
  "author": "kirbownz@me.com",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "scripts": {
    "build": "yarn react-build && yarn dist",
    "react-dev": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "dev": "nf start",
    "electron-start": "electron .",
    "electron-dev": "NODE_ENV=development ELECTRON_START_URL=http://localhost:3000 electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.github.kirbo.sloth",
    "asar": true,
    "files": [
      ".env",
      "build"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "protocols": [
      {
        "name": "sloth2",
        "role": "Viewer",
        "schemes": [
          "sloth2",
          "sloth2s"
        ]
      }
    ]
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "dotenv": "6.2.0",
    "electron-json-storage": "4.1.6",
    "electron-log": "3.0.1",
    "electron-updater": "4.0.6",
    "node-emoji": "1.10.0",
    "node-wifi": "https://github.com/kirbo/node-wifi#master",
    "request": "2.88.0",
    "slack": "11.0.2"
  },
  "devDependencies": {
    "electron": "4.0.6",
    "electron-builder": "20.38.5",
    "foreman": "3.0.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-scripts": "2.1.5",
    "styled-components": "4.1.3",
    "typescript": "3.3.3333"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
